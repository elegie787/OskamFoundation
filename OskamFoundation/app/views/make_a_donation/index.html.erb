<div class="well">
    <h3 align="center">Current Donations</h3>
</div>

<div class="container">
    <table class="table table-striped table-condensed">   
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Donation Amount</th>
                <th>Donation Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <% @results.each do |r|%>
                    <td><%= r.first_name %></td>
                    <td><%= r.last_name %></td>
                    <td>$<%= number_with_precision(r.donation_amount, precision: 2) %></td>
                    <td><%= r.donation_date %></td>
                <% end %>
            <tr>
        </tbody>
    </table>
    <div align='center'>
        <button align='center' class="btn btn-primary">Make A Donation</button>
    </div>
</div>